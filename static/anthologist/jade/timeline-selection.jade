div(itemprop="itemListElement", itemscope, itemtype="http://www.schema.org/CreativeWork") 	
	h2(id="#{source.pub_year}").timeline-date= source.date_display
	.timeline-sel-body
		meta(itemprop="dateCreated", datetime="#{source.pub_year}")
		h3.timeline-sel-title
			a(href="/anthologist/selections/#{slug}", itemprop="url')
				span(itemprop="name")
					if selection_title
						#{selection_title},
					else
						#{source.section_title},
		span.timeline-sel-info
			| by
			span(itemprop="author", itemscope, itemtype="http://www.schema.org/Person")
				meta(itemprop="familyName", content="#{source.author.last_name}")
				meta(itemprop="givenName", content="#{source.author.first_name}")
				a(href="/anthologist/authors/#{source.author.slug}", itemprop="url)
					span(itemprop="name")= source.author.full_name
			| .
			if excerpt == true
				| From !{source_display}.&nbsp;
		span.posted-date
			| (Posted:
			time(itemprop="datePublished", datetime="#{date_entered_microdata}")= date_entered
			| .)
		span.toggle-teaser [See the teaser <span class="arrow-down"></span>]
		.timeline-teaser
			span.timeline-teaser-text!= teaser
			span.ellipsis &nbsp;...&nbsp;
			a(href="/anthologist/selections/#{slug}") [read the rest]