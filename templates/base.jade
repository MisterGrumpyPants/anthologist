!!! 5
html(lang = "en")
	head
		meta(charset="utf-8")
		block title
			title the Anthologist
		
		//rss feed
		link(rel="alternate", type="application/rss+xml", title="RSS", href="/feed/")
		
		// styles
		link(rel="stylesheet/less", type="text/css", href="#{STATIC_URL}anthologist/css/base.less")
		
		block styles
		
		// scripts
		script(type="application/javascript", src="#{STATIC_URL}anthologist/js/libraries/html5shiv.min.js")
		script(type="application/javascript", src="#{STATIC_URL}anthologist/js/libraries/html5shiv-printshiv.min.js")
		script(type="application/javascript", src="#{STATIC_URL}anthologist/js/libraries/less-1.3.0.min.js")
		script(type="application/javascript", src="#{STATIC_URL}anthologist/js/libraries/jquery-1.7.2.min.js")
		script(type="application/javascript", src="#{STATIC_URL}anthologist/js/libraries/jade.js")
		script(type="application/javascript", src="#{STATIC_URL}anthologist/js/utils.js")
		script(type="application/javascript", src="#{STATIC_URL}anthologist/js/libraries/underscore-1.3.3.min.js")
		script(type="application/javascript", src="#{STATIC_URL}anthologist/js/libraries/backbone-0.9.2.min.js")
		script(type="application/javascript", src="#{STATIC_URL}anthologist/js/libraries/google-analytics.js")
		script(type="application/javascript", src="#{STATIC_URL}anthologist/js/models.js")
		script(type="application/javascript", src="#{STATIC_URL}anthologist/js/base.js")
		block scripts
		
		//RSS feed auto-discovery
		link(rel="alternate", type="application/rss+xml", title="RSS", href="/feed")
		
	body
		#wrapper
			a(href="#site-content-container")#skip Skip to Main Content (for screen readers)
			block header
				header#site-header(itemscope, itemtype="http://www.schema.org/WPHeader")
					meta(itemprop="name", content="the Anthologist")
					a(href="/", itemprop="url")#site-header-title
						span#site-title-the the&nbsp;
						span#site-title-name Anthologist
					nav(itemscope, itemtype="http://www.schema.org/SiteNavigationElement")#site-header-nav
						ul.navigation
							li
								a(href="/browse") browse
								ul
									li
										a(href="/selections/") &raquo; all selections
									li
										a(href="/authors/") &raquo; authors
									li
										a(href="/timeline/") &raquo; timeline
									li
										a(href="/forms/") &raquo; forms									
									li
										a(href="/genres/") &raquo; genres
									li
										a(href="/topics/") &raquo; topics
									li
										a(href="/contexts/") &raquo; contexts
									li
										a(href="/styles/") &raquo; styles
									li
										a(href="/nations/") &raquo; nations
									li
										a(href="/languages/") &raquo; orig. languages
							li
								a(href="/selections/most-recent/") newest
							li
								a(href="/selections/random/") random
							li
								a(href="/announcements/") announcements									
							li
								a(href="/#about") about
			#site-content-container
				block content
			footer#site-footer(itemscope, itemtype="http://www.schema.org/WPFooter")
				ul.navigation
					li
						a(href="/resources/") links &amp; sources
					li
						a(href="/contribute/") contact, submit, contribute
					li
						a.get-copyright-info copyright info
					section#copyright-info
						p
							| All of <cite>The Anthologist</cite>'s selections are from works in the public domain.
							| (If a source text is <em>not</em>, in fact, in the public domain, there's been a misunderstanding;
							| <a href="/contribute">please inform us</a> and it will be taken down.)
						p
							| Everything on the site that is not from the public domain texts
							| <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/3.0/deed.en_US">
							| is licensed under a Creative Commons Attribution-NonCommercial-ShareAlike 3.0 Unported License.</a>
						p
							a.get-copyright-info [close this]
						
						